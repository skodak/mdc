#!/usr/bin/env bash
set -e

thisfile=$( readlink "${BASH_SOURCE[0]}" ) || thisfile="${BASH_SOURCE[0]}"
MDC_BASEDIR="$( cd "$( dirname "$thisfile" )/../" && pwd -P )"
export MDC_BASEDIR="${MDC_BASEDIR}"

source "${MDC_BASEDIR}/bin/include/check.sh"

if [ -z "$1" ]; then
    echo "Backup name is required"
    exit 1
fi

$MDC_BASEDIR/bin/mdc exec webserver bash --login /mdc/mdc-backup.sh $1
$MDC_BASEDIR/bin/mdc exec db bash /mdc/mdc-backup.sh $1
